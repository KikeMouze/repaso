<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="repaso.Page3">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="red"></Setter>
                <Setter Property="BackgroundColor" Value="Beige"></Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblUsuario" TextColor="Red" FontSize="16" HorizontalTextAlignment="End" />
            <Label Text="VENTANA 3" HorizontalTextAlignment="Center"  FontSize="24"></Label>
            <Entry x:Name="txtDato" IsReadOnly="True"></Entry>
            <Entry x:Name="txtEstudiante" IsReadOnly="True"></Entry>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>